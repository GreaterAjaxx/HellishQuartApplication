<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Application Settings">

        <EditTextPreference
            app:key="DISPLAY_NAME"
            app:title="Your display name"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="false"
            app:entries="@array/character_entries"
            app:entryValues="@array/character_values"
            app:key="DEFAULT_CHAR"
            app:title="Default Character"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />


    </PreferenceCategory>
</PreferenceScreen>